{% trans_default_domain 'FOSUserBundle' %}

<div class="well">
	<legend>{{ 'change_password.submit'|trans }}</legend>
	{{ form_start(form, { 'method': 'post', 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}
		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_label(form.current_password, 'form.current_password', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			{{ form_errors(form.current_password) }}
			<div class="col-md-4">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control input-md'}}) }}
            </div>
		</div>
		<div class="form-group">
			{{ form_label(form.plainPassword.first, 'form.password', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			{{ form_errors(form.plainPassword.first) }}
			<div class="col-md-4">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control input-md'}}) }}
            </div>
		</div>
		<div class="form-group">
			{{ form_label(form.plainPassword.second, 'form.password_confirmation', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			{{ form_errors(form.plainPassword.second) }}
			<div class="col-md-4">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control input-md'}}) }}
            </div>
		</div>
    	{{ form_widget(form) }}
    	<div class="form-group">
    		<div class="col-md-4 col-md-offset-4">
        		<input class="btn btn-info" type="submit" value="{{ 'change_password.submit'|trans }}" />
        	</div>
    	</div>
    {{ form_rest(form) }}
	{{ form_end(form) }}
</div>