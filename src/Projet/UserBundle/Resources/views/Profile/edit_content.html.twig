{% trans_default_domain 'FOSUserBundle' %}

<div class="well">
	<legend>{% if app.request.locale == 'fr' %}Modification du profil {% else %} Edit profile {% endif %}</legend>
	{{ form_start(form, { 'method': 'post', 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit form-horizontal' } }) }}
		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_label(form.username, 'form.username', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			{{ form_errors(form.username) }}
			<div class="col-md-4">
                {{ form_widget(form.username, {'attr': {'class': 'form-control input-md'}}) }}
            </div>
		</div>
		<div class="form-group">
			{{ form_label(form.email, 'form.email', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			{{ form_errors(form.email) }}
			<div class="col-md-4">
                {{ form_widget(form.email, {'attr': {'class': 'form-control input-md'}}) }}
            </div>
		</div>
		<div class="form-group">
			{{ form_label(form.image, 'Avatar', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			{{ form_errors(form.image) }}
			<div class="col-md-4">
                {{ form_widget(form.image) }}
            </div>
		</div>
		<div class="form-group">
			{{ form_label(form.current_password, 'form.current_password', {'label_attr': {'class': 'col-md-4 control-label'}}) }}
			{{ form_errors(form.current_password) }}
			<div class="col-md-4">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control input-md'}}) }}
            </div>
		</div>
    	{{ form_widget(form) }}
    	<div class="form-group">
    		<div class="col-md-4 col-md-offset-4">
	        	<input class="btn btn-info" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
	        </div>
    	</div>
    {{ form_rest(form) }}
	{{ form_end(form) }}
</div>