{% extends "ProjetForumBundle::layout.html.twig" %}

{% block repere %}
  <ul class="breadcrumb" id="help">
    <li><a href="{{ path('projet_forum_homepage') }}">{{ 'Accueil'|trans }}</a></li>
    <li><a href="{{ path('projet_forum_view_category', {'category_id': category.id}) }}">{{ category.name|trans }}</a></li>
    <li><a href="{{ path('projet_forum_view_subCategory', {'category_id': category.id, 'subCategory_id': subCategory.id}) }}">{{ subCategory.name|trans }}</a></li>
    <li><a href="{{ path('projet_forum_view_subject', {'category_id': category.id, 'subCategory_id': subCategory.id, 'subject_id': subject.id}) }}">{{ subject.title|trans }}</a></li>
  </ul>

	<h2>{{ 'Supprimer un commentaire'|trans }}</h2>

	<p>{{ 'Êtes-vous certain de vouloir supprimer ce commentaire ?'|trans }}</p>
	<blockquote>{{ comment.content|raw }}</blockquote>

  	<form action="{{ path('projet_forum_delete_comment', {'category_id': category.id, 'subCategory_id': subCategory.id, 'subject_id': subject.id, 'comment_id': comment.id }) }}" method="post">
    	<input class="btn btn-lg btn-danger" type="submit" value={{ 'Supprimer'|trans }} />
    	{# Ceci va générer le champ CSRF #}
    	{{ form_rest(form) }}
  	</form>

{% endblock %}