<div class="well container">
	<legend>{{ 'Formulaire de sujet'|trans }}</legend>
	{{ form_start(form, {'method': 'post', 'attr': {'class': 'form-horizontal'}}) }}
		{{ form_errors(form) }}
		<div class="form-group">
			<div class="col-md-8 col-md-offset-2">
                {{ form_widget(form.title, {'attr': {'class': 'form-control input-md', 'placeholder': 'Titre du sujet'|trans }}) }}
            </div>
		</div>
		<div class="form-group">
			<div class="col-md-12">
                {{ form_widget(form.content, {'attr': {'class': 'form-control textarea', 'rows': '7'}}) }}
            </div>
		</div>
		<div class="form-group">
    		<div class="col-md-4 col-md-offset-5">
	        	{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
	        </div>
    	</div>
    {{ form_rest(form) }}
	{{ form_end(form) }}
</div>